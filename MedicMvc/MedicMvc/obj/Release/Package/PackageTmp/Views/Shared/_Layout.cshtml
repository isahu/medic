<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medic Web", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@ViewBag.CommunicateClass">@Html.ActionLink("Communicate", "Communicate", "Home")</li>
                    <li class="@ViewBag.MedicineClass">@Html.ActionLink("Medicine", "Medicine", "Home")</li>
                    <li class="@ViewBag.DischargeClass">@Html.ActionLink("Discharge Information", "Discharge", "Home")</li>
                    <li class="@ViewBag.RatingClass">@Html.ActionLink("Hospital Rating", "Rating", "Home")</li>
                    <li class="@ViewBag.PainClass">@Html.ActionLink("Pain Management", "Pain", "Home")</li>
                    <li class="@ViewBag.AboutClass">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="@ViewBag.ContactClass">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div>
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - MEDIC Web Group</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
